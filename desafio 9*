import pyautogui
import webbrowser
import pyperclip
from time import sleep
#abrir uma aba em um navegador existente ou o navegador

def escrever_frase(frase):
    pyperclip.copy(frase)
    pyautogui.hotkey("ctrl","v")

webbrowser.open_new_tab("cursoautomacao.netlify.app/")
